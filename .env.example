# Server Configuration
PORT=3000
NODE_ENV=production

# ============== API KEYS ==============
# Get your API keys from the respective service providers

# Baidu AI Studio (Image Understanding & Text Generation)
# Visit: https://aistudio.baidu.com/
# Uses OpenAI-compatible API with ernie-4.5-turbo-vl multimodal model
# API Documentation: https://aistudio.baidu.com/llm/lmapi/v3
BAIDU_API_KEY=your_baidu_api_key_here

# StepFun (Cantonese TTS - Text to Speech)
# Visit: https://platform.stepfun.com/
# Supports: step-tts-2, step-tts-mini, step-tts-vivid models
STEPFUN_API_KEY=your_stepfun_api_key_here
# Optional: TTS model selection (default: step-tts-2)
# STEPFUN_MODEL=step-tts-2
# Optional: Voice gender (default: female)
# STEPFUN_GENDER=female
# Optional: Custom StepFun API endpoint
# STEPFUN_API_ENDPOINT=https://api.stepfun.com/v1

# Tencent Cloud (Cantonese ASR - Speech Recognition)
# Visit: https://cloud.tencent.com/product/asr
# Uses 16k_yue engine model for Cantonese
# API Documentation: https://cloud.tencent.com/document/product/1093/52638
TENCENT_SECRET_ID=your_tencent_secret_id_here
TENCENT_SECRET_KEY=your_tencent_secret_key_here
TENCENT_APP_ID=your_tencent_app_id_here
# Optional: Tencent Cloud region (default: ap-guangzhou)
# TENCENT_REGION=ap-guangzhou

# ============== OPTIONAL CONFIGURATION ==============

# File upload settings
MAX_FILE_SIZE_MB=10

# Request timeout settings (milliseconds)
API_TIMEOUT_MS=60000

# Logging level (debug, info, warn, error)
LOG_LEVEL=info
